<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>

        <IsPackable>true</IsPackable>
        <Description>Basis Theory .NET Azure Encryption Provider</Description>
        <Copyright>Copyright 2021</Copyright>
        <PackageProjectUrl>https://github.com/Basis-Theory/basistheory-dotnet</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Basis-Theory/basistheory-dotnet</RepositoryUrl>
        <PackageTags>BasisTheory,SDK,Azure</PackageTags>
        <NuspecProperties>version=$(Version)</NuspecProperties>
        <AssemblyVersion>1.0.0</AssemblyVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Azure.Security.KeyVault.Keys" Version="4.4.0" />
      <PackageReference Include="Azure.Security.KeyVault.Secrets" Version="4.3.0" />
      <PackageReference Include="LazyCache" Version="2.4.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\BasisTheory.net\BasisTheory.net.csproj" />
    </ItemGroup>

</Project>
